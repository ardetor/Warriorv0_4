<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_summary_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.accypiter.warriorv0_4.ActivitySummary"
    tools:showIn="@layout/activity_summary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_summary_linlay_buttons_outer"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/activity_summary_linlay_buttons_inner_top">
            
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/activity_summary_button_journal"
                android:id="@+id/activity_summary_button_journal"
                android:onClick="startActivityJournal"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/activity_summary_button_map"
                android:id="@+id/activity_summary_button_map"/>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/activity_summary_linlay_buttons_inner_middle">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/activity_summary_button_health"
                android:id="@+id/activity_summary_button_health"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/activity_summary_button_skills"
                android:id="@+id/activity_summary_button_skills"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/activity_summary_linlay_buttons_inner_bottom">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/activity_summary_button_inventory"
                android:id="@+id/activity_summary_button_inventory"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/activity_summary_button_undiscovered"
                android:enabled="false"
                android:id="@+id/activity_summary_button_magic" />

        </LinearLayout>
        
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ff000000"
        android:id="@+id/activity_summary_bar_health_max"
        android:layout_above="@id/activity_summary_linlay_buttons_outer"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ffffff00"
        android:id="@+id/activity_summary_bar_health_body"
        android:layout_above="@id/activity_summary_linlay_buttons_outer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ff00ff00"
        android:id="@+id/activity_summary_bar_health_current"
        android:layout_above="@id/activity_summary_linlay_buttons_outer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/activity_summary_bar_health_max"
        android:layout_alignParentTop="true"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HB"
                android:onClick="testHealthBody"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HC"
                android:onClick="testHealthCurrent"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toggle IF"
                android:onClick="startFight"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TJ"
                android:onClick="testJournal"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TJ2"
                android:onClick="testJournal2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_summary_debugger"/>



        </LinearLayout>

    </ScrollView>

</RelativeLayout>